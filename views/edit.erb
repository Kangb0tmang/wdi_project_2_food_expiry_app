<!-- edit-item -->
<div id="edit-item" class="main-container">
  <h1 class="main-title">Edit <%= @food_item.item_name %></h1>
  <p><%= @notification_error %></p>

  <form action="/food/<%= params[:storage_type] %>/<%= @food_item.id %>" method="post" class="edit-form">
    <input type="hidden" name="_method" value="put">
    <input type="hidden" name="days_left" value="<%= @days_left %>">

    <div class="form-group">
      <label for="food-item">Food Item</label>
      <input type="text" name="item_name" value="<%= @food_item.item_name %>" required>
    </div>

    <div class="form-group">
      <label for="purchase-date">Date Purchased</label>
      <input type="date" name="purchase_date" value="<%= @food_item.purchase_date %>" required>
    </div>

    <div class="form-group">
      <label for="expiry-date">Expiry Date</label>
      <input type="date" name="expiry_date" value="<%= @food_item.expiry_date %>" required>
    </div>

    <div class="form-group">
      <label for="notification">Remind me on</label>
      <input type="date" name="notification" value="<%= @food_item.notification %>" required>
    </div>

    <% if @days_left > 0 %>
    <div class="form-group">
      <label for="finished-food">I have consumed this food before it expired!</label>
      <input type="checkbox" name="finished_food" value="checked">
    </div>
    <% end %>

    <div class="form-group">
      <button type="submit">Update Food</button>
      <a href="javascript:history.back()">Back</a>
    </div>
  </form>
</div>
<!-- end edit-item -->
